{{head-title 'Pean | Results'}}
<nav class="results-nav">
	<div class="nav-wrapper">
		<a href="/" class="brand-logo">Pean</a>
		<a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
	<ul class="right hide-on-med-and-down">
      <li>{{#link-to 'about'}} About {{/link-to}} </li>
      <li> {{#link-to 'contacts'}} Contact {{/link-to}} </li>
      <li> {{#link-to 'cart'}} Cart {{/link-to}} </li>
    </ul>
    <ul class="side-nav" id="mobile-demo">
      <li>{{#link-to 'about'}} About {{/link-to}} </li>
      <li> {{#link-to 'contacts'}} Contact {{/link-to}} </li>
      <li> {{#link-to 'cart'}} Cart {{/link-to}} </li>
    </ul>
  </div>

</nav>
{{#each model as |product|}}
<div class="product-container">
	<div class="row" id="product-card">
		<div class="">
			<div class="card">
				<div class="card-image">
					<img src={{product.image.sizes.Best.url}}>
					<span class="card-title">{{product.name}}</span>
					<a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
				</div>
				<div class="card-content">
					<span class="card-title activator grey-text text-darken-4"><i class="material-icons right">more_vert</i></span>
					<p class="product-price"> Price: {{product.currency}} {{product.priceLabel}}</p>
				</div>
				<div class="card-reveal">
					<span class="card-title grey-text text-darken-4">{{product.name}}<i class="material-icons right">close</i></span>
					<p>{{product.description}}</p>
				</div>
			</div>
		</div>
		{{new-order product=product addOrder1='addOrder2'}}
	</div>
</div>
{{/each}}
