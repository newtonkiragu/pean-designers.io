{{#each model as |product|}}
<div class="product-container">
	<div class="row" id="product-card">
		<div class="">
			<div class="card hoverable">
				<div class="card-image">
					<img src={{product.image.sizes.Best.url}}>
					<span class="card-title">{{product.name}}</span>
					{{new-order product=product addOrder1='addOrder2'}}
				</div>
				<div class="card-content">
					<span class="card-title activator grey-text text-darken-4"><i class="material-icons right">more_vert</i></span>
					<p class="product-price">{{product.currency}} {{product.priceLabel}}</p>
				</div>
				<div class="card-reveal">
					<span class="card-title grey-text text-darken-4">{{product.name}}<i class="material-icons right">close</i></span>
					<p>{{product.description}}</p>
					<p class="product-price"> Price: {{product.currency}} {{product.priceLabel}}</p>
				</div>
			</div>
		</div>
	</div>
</div>
	{{/each}}
