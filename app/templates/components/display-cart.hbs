{{head-title 'Pean | Cart'}}
<nav class="cart-nav">
	<div class="nav-wrapper">
		<a href="/" class="brand-logo">Pean</a>
		<a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
		<ul class="right hide-on-med-and-down">
			<li>{{#link-to 'about'}} About {{/link-to}} </li>
			<li> {{#link-to 'contacts'}} Contact {{/link-to}} </li>
			{{!--<li><a href="collapsible.html">Services</a></li>--}}
			<li> {{#link-to 'cart'}} Cart {{/link-to}} </li>
		</ul>
		<ul class="side-nav" id="mobile-demo">
			<li>{{#link-to 'about'}} About {{/link-to}} </li>
			<li> {{#link-to 'contacts'}} Contact {{/link-to}} </li>
			{{!--<li><a href="collapsible.html">Services</a></li>--}}
			<li> {{#link-to 'cart'}} Cart {{/link-to}} </li>
		</ul>
	</div>
</nav>
<div class="container">
	<h3>My Cart {{shoppingCart.items.length}} Items</h3>
	<a class="waves-effect waves-light red btn" {{action 'emptyCart'}}>Empty Cart</a>
	{{#each shoppingCart.items as |item|}}
	<table  class="products-table">
		<thead>
			<tr>
				<th>Product</th>
				<th>Price</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{{item.brandedName}}</td>
				<td>{{item.priceLabel}}</td>
			</tr>
			<a class="waves-effect waves-light blue btn" {{action 'remove' item}}>Remove Product</a>
			<a class="btn-floating btn-small waves-effect waves-light red" {{action 'addItem' item}}><i class="material-icons">add</i></a>
			<a class="btn-floating btn-small waves-effect waves-light red" {{action 'removeItem' item}}><i class="material-icons">delete</i></a>
		</tbody>
	</table>
	{{/each}}
</div>
