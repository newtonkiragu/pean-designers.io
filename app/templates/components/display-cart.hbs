
<h3>My Cart {{shoppingCart.items.length}} Items</h3>
<button {{action 'emptyCart'}} >Empty Cart</button>

{{#each shoppingCart.items as |item|}}
    <li>{{item.brandedName}} -- {{item.priceLabel}}
        <button {{action 'remove' item}} >remove</button>
        <button {{action 'addItem' item}} >-</button>
        <button {{action 'removeItem' item}} >+</button>
    </li>
{{/each}}