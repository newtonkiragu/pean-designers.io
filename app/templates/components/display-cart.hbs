<div class="container">
	<h3>My Cart {{shoppingCart.items.length}} Items</h3>
    <h4>Total: {{shoppingCart.total}} </h4>
	<a class="waves-effect waves-light red btn" {{action 'emptyCart'}}>Empty Cart</a>
	{{#each shoppingCart.items as |item|}}
	<table  class="products-table">
		<thead>
			<tr>
				<th>Product</th>
				<th>Price</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{{item.brandedName}}</td>
				<td>{{item.priceLabel}}</td>
			</tr>
			<a class="waves-effect waves-light blue btn" {{action 'remove' item}}>Remove Product</a>
			<a class="btn-floating btn-small waves-effect waves-light red" {{action 'addItem' item}}><i class="material-icons">add</i></a>
			<a class="btn-floating btn-small waves-effect waves-light red" {{action 'removeItem' item}}><i class="material-icons">delete</i></a>
		</tbody>
	</table>
	{{/each}}
</div>

